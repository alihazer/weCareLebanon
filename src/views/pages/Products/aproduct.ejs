<div class="containerAproducts">

    <div class="products" >
        
        <div  id="infopro">
            <p  class="images"></p>
            <h2 class="name" id="title">Name</h2>
            <h2 class="details" id="title">Details</h2>
            <h2 class="quantity" >Quantity</h2>
            <h2 class="purchasePrice" >Purchase Price</h2>
