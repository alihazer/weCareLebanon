    <div class="ghraphPro">
        <h1>Product Stats:</h1>
        <form class="filterdatePro" id="filterdatePro">
            <div>
                <label for="year">Year</label>
                <select id="year">
                    <% const currentYear = new Date().getFullYear(); %>
                    <% for (let i = 2025; i <= currentYear; i++) { %>
                        <option value="<%= i %>" <%= i === currentYear ? 'selected' : '' %>><%= i %></option>
                    <% } %>
                </select>
            </div>
        </form>
        <div id="chart"></div>
    </div>
</div>

